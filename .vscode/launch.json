  "version": "0.2.0",
  "configurations": [
    {
      "name": "kafka - presentation",
      "type": "python",
      "request": "launch",
      "program": "src/presentation/api/app.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/src/presentation/service/main.py"
    },
    {
      "name": "fast api - presentation",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["presentation.api.main:app", "--reload"],
      "cwd": "${workspaceFolder}/src"
    }
  ]
}
